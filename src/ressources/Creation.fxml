<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <BorderPane prefHeight="445.0" prefWidth="683.0">
         <bottom>
            <Button mnemonicParsing="false" onAction="#validerCarte" text="Valider" BorderPane.alignment="CENTER" />
         </bottom>
         <center>
            <SplitPane prefHeight="160.0" prefWidth="200.0" BorderPane.alignment="CENTER">
              <items>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="387.0" prefWidth="280.0">
                     <children>
                        <HBox layoutX="-2.0" layoutY="-4.0">
                           <children>
                              <Button fx:id="prec" mnemonicParsing="false" onAction="#allerPrec" text="Precedent" />
                              <TextArea fx:id="question" prefHeight="100.0" prefWidth="100.0" promptText="Question" />
                              <TextArea fx:id="reponse" prefHeight="100.0" prefWidth="100.0" promptText="Reponse" />
                              <Button fx:id="suiv" mnemonicParsing="false" onAction="#allerSuiv" text="Suivant" />
                           </children>
                        </HBox>
                     </children>
                  </AnchorPane>
              </items>
            </SplitPane>
         </center>
         <top>
            <ToolBar prefHeight="32.0" prefWidth="600.0" BorderPane.alignment="CENTER">
               <items>
                  <Button mnemonicParsing="false" onAction="#quitterAppli" text="Quitter" />
                  <Button mnemonicParsing="false" onAction="#allerAccueil" text="Accueil" />
                  <Button mnemonicParsing="false" onAction="#voirPaquet" text="Voir le paquet" />
                  <Button fx:id="supprimerCarteBouton" mnemonicParsing="false" onAction="#supprimerCarte" text="Supprimer la carte" />
               </items>
            </ToolBar>
         </top>
      </BorderPane>
   </children>
</AnchorPane>
