<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="650.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <BorderPane layoutY="-1.0" prefHeight="650.0" prefWidth="1000.0">
         <left>
            <VBox prefHeight="400.0" prefWidth="350.0" BorderPane.alignment="CENTER">
               <children>
                  <VBox prefWidth="350.0" prefHeight="160" style="-fx-border-style: dashed dashed none none;">
                     <VBox fx:id="statsboxPaquet" prefHeight="120.0" >
                        <VBox.margin>
                           <Insets left="10.0" />
                        </VBox.margin>
                     </VBox>
                  </VBox>
                  <VBox style="-fx-border-style: dashed dashed none none;" prefWidth="350">
                     <VBox fx:id="statsboxCarte" prefHeight="120.0" prefWidth="250.0">
                        <VBox.margin>
                           <Insets left="10.0" />
                        </VBox.margin>
                     </VBox>

                  <PieChart fx:id="graphCarte" prefHeight="191.0" prefWidth="121.0" />
                  </VBox>
                  <VBox style="-fx-border-style: dashed dashed none none;" prefWidth="350">
                     <VBox fx:id="statsboxEntrainement" prefHeight="120.0" prefWidth="250.0">
                        <VBox.margin>
                           <Insets left="10.0" />
                        </VBox.margin></VBox>
                  <PieChart fx:id="graphPaquet" prefHeight="191.0" prefWidth="121.0" />
                </VBox>
               </children>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
            </VBox>
         </left>
         <top>
            <ToolBar prefHeight="32.0" prefWidth="600.0" BorderPane.alignment="CENTER">
               <items>
                  <Button mnemonicParsing="false" onAction="#quitterAppli" text="Quitter" />
                  <Button mnemonicParsing="false" onAction="#allerAccueil" text="Accueil" />
                  <Button mnemonicParsing="false" onAction="#voirPaquet" text="Voir le paquet" />
                  <SplitMenuButton mnemonicParsing="false" text="Voir les stats">
                     <items>
                        <MenuItem fx:id="paquetVisibility" mnemonicParsing="false" text="✔ Stats paquet" onAction="#showPaquet" />
                        <MenuItem fx:id="carteVisibility" mnemonicParsing="false" text="✔ Stats carte" onAction="#showcarte" />
                        <MenuItem fx:id="entrainementVisibility" mnemonicParsing="false" text="✔ Stats entrainement" onAction="#showEntrainement" />
                     </items>
                  </SplitMenuButton>
               </items>
            </ToolBar>
         </top>
         <center>
            <VBox BorderPane.alignment="CENTER" >
            <ToggleButton fx:id="toggleFlashCard" mnemonicParsing="false" onAction="#majFlashCard" prefHeight="259.0" prefWidth="444.0" text="ToggleButton" alignment="CENTER"/>
            <HBox prefHeight="35.0" prefWidth="450.0" alignment="CENTER" >
               <children>
                  <Button fx:id="questionReussieBouton" mnemonicParsing="false" onAction="#reussite" text="Réussi" />
                  <Label fx:id="compteurLabel" prefHeight="16.0" prefWidth="504.0" text="Timer" />
                  <Button fx:id="questionLoupeeBouton" mnemonicParsing="false" onAction="#echec" text="Échoué" />
               </children>
            </HBox>
            </VBox>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
