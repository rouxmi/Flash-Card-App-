<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="650.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <BorderPane layoutY="-1.0" prefHeight="650.0" prefWidth="1000.0">
         <left>
            <VBox prefHeight="400.0" prefWidth="350.0" BorderPane.alignment="CENTER">
               <children>
                  <VBox prefHeight="160" prefWidth="350.0" style="-fx-border-style: dashed dashed none none;">
                     <VBox fx:id="statsboxPaquet" prefHeight="120.0">
                        <VBox.margin>
                           <Insets left="10.0" />
                        </VBox.margin>
                     </VBox>
                  </VBox>
                  <VBox prefWidth="350" style="-fx-border-style: dashed dashed none none;">
                     <VBox fx:id="statsboxCarte" prefHeight="120.0" prefWidth="250.0">
                        <VBox.margin>
                           <Insets left="10.0" />
                        </VBox.margin>
                     </VBox>

                  <PieChart fx:id="graphCarte" prefHeight="191.0" prefWidth="121.0" />
                  </VBox>
                  <VBox prefWidth="350" style="-fx-border-style: dashed dashed none none;">
                     <VBox fx:id="statsboxEntrainement" prefHeight="120.0" prefWidth="250.0">
                        <VBox.margin>
                           <Insets left="10.0" />
                        </VBox.margin></VBox>
                  <PieChart fx:id="graphPaquet" prefHeight="191.0" prefWidth="121.0" />
                </VBox>
               </children>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
            </VBox>
         </left>
         <top>
            <ToolBar prefHeight="32.0" prefWidth="600.0" BorderPane.alignment="CENTER">
               <items>
                  <Button mnemonicParsing="false" onAction="#allerAccueil" text="Accueil" />
                  <Button mnemonicParsing="false" onAction="#voirPaquet" text="Voir le paquet" />
                  <Button mnemonicParsing="false" text="Voir les stats" />
                  <Button mnemonicParsing="false" onAction="#quitterAppli" text="Quitter" />
                  <SplitMenuButton mnemonicParsing="false" text="Voir les stats">
                     <items>
                        <MenuItem fx:id="paquetVisibility" mnemonicParsing="false" onAction="#showPaquet" text="✔ Stats paquet" />
                        <MenuItem fx:id="carteVisibility" mnemonicParsing="false" onAction="#showcarte" text="✔ Stats carte" />
                        <MenuItem fx:id="entrainementVisibility" mnemonicParsing="false" onAction="#showEntrainement" text="✔ Stats entrainement" />
                     </items>
                  </SplitMenuButton>
               </items>
            </ToolBar>
         </top>
         <center>
            <VBox BorderPane.alignment="CENTER">
            <ToggleButton fx:id="toggleFlashCard" mnemonicParsing="false" onAction="#majFlashCard" prefHeight="420.0" prefWidth="610.0" text="ToggleButton">
                <VBox.margin>
                    <Insets left="20" top="20.0" />
                </VBox.margin>
            </ToggleButton>
            <HBox alignment="CENTER" prefHeight="200.0" prefWidth="450.0">
               <children>
                  <Button fx:id="questionReussieBouton" mnemonicParsing="false" onAction="#reussite" prefHeight="70.0" prefWidth="100.0" style="-fx-background-color: green; -fx-text-fill: white; -fx-border-radius: 10 10 10 10;" text="Réussi">
                        <HBox.margin>
                           <Insets right="70.0" top="50.0" />
                        </HBox.margin>
                        <font>
                           <Font name="System Bold" size="16.0" />
                        </font></Button>
                  <VBox>
                     <VBox.margin>
                        <Insets left="120.0" right="120" />
                     </VBox.margin>
                     <Label fx:id="compteurLabel" prefHeight="16.0" style="-fx-text-alignment: center; -fx-font-size: 50px; -fx-font-weight: bold; -fx-text-fill: #000000;" text="Timer" />
                  </VBox>
                  <Button fx:id="questionLoupeeBouton" mnemonicParsing="false" onAction="#echec" prefHeight="70.0" prefWidth="100.0" style="-fx-background-color: red; -fx-text-fill: white; -fx-border-radius: 10 10 10 10; " text="Échoué" wrapText="true">
                        <HBox.margin>
                           <Insets left="70.0" top="50.0" />
                        </HBox.margin>
                        <font>
                           <Font name="System Bold" size="16.0" />
                        </font></Button>
               </children>
            </HBox>
            </VBox>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
